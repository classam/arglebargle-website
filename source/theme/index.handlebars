{{> partials/header }}

<div class='recent'>
<ul class='index'>
{{#each-limit index 1}}
<li class='special post'>
    <h2><a href="{{this.id}}.html">{{this.title}}</a></h2>
    <h4>{{this.human_date}}</h4>
    <a class='fade' href="{{this.id}}.html">
        <div class='post_content'>
            {{{this.html}}}
        </div>
    </a>
    <a class='readmore' href="{{this.id}}.html">Read More!</a>
    </li>
{{/each-limit}}
</ul>
</div>

<div class='featured featured_comic'>
<h2>Cube Drone</h2>
<ul>
{{#each-limit reverse_categories.[Cube Drone] 1}}
<li class='special post'>
    <h3><a href="{{this.id}}.html">{{this.title}}</a></h3> 
    <a class='fade' href="{{this.id}}.html">
        <div class='post_content'>
        {{{this.html}}}
        </div>
    </a>
    <a class='readmore' href="{{this.id}}.html">Read More!</a>
